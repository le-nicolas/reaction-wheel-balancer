<mujoco model="cart_pole">
    <option timestep="0.001" gravity="0 0 -9.81"/>

    <worldbody>
        <!-- Ground -->
        <geom type="plane" size="10 10 0.1" rgba="0.9 0.9 0.9 1"/>

        <!-- Cart -->
        <body name="cart" pos="0 0 0.1">
            <joint name="cart_slide"
                   type="slide"
                   axis="0 1 0"
                   damping="1.0"/>

            <geom type="box"
                  size="0.2 0.15 0.05"
                  mass="5.0"
                  rgba="0.2 0.2 0.8 1"/>

            <!-- Pole -->
            <body name="pole" pos="0 0 0.05">
                <joint name="pole_hinge"
                       type="hinge"
                       axis="1 0 0"
                       damping="0.05"/>

                <geom type="capsule"
                      fromto="0 0 0  0 0 1.0"
                      size="0.03"
                      mass="1.0"
                      rgba="0.8 0.2 0.2 1"/>
            </body>
        </body>
    </worldbody>

    <actuator>
        <motor joint="cart_slide"
               ctrlrange="-50 50"/>
    </actuator>
</mujoco>
