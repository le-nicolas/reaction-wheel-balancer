<mujoco model="falling_stick">
    <option timestep="0.001" gravity="0 0 -9.81"/>

    <visual>
        <map znear="0.01" zfar="50"/>
    </visual>   

    <worldbody>
        <camera name="main"
            pos="0 -4 2"
            quat="0.9239 0.3827 0 0"/>
        <!-- Plane of reference-->

        <geom type="plane"
            size="5 5 0.1"
            rgba="0.9 0.9 0.9 1"/>
            
        <!-- Pivot point -->
        <body name="stick" pos="0 0 0.3">
            <!-- Hinge allows rotation ONLY about x-axis -->
            <joint name="hinge_x"
                   type="hinge"
                   axis="1 0 0"
                   damping="0.5"/>

            <!-- Long stick geometry -->
            <geom type="capsule"
                  fromto="0 0 0  0 0 1"
                  size="0.03"
                  density="800"
                  rgba="0.2 0.6 0.9 1"/>
        </body>
    </worldbody>
</mujoco>
